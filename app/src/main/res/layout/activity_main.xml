<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:layout_centerHorizontal="true"
        android:text="CRUD Android MySQL"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-black"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/header2"
        android:text="Modul 6 Pemrograman Mobile"
        android:fontFamily="sans-serif-black"
        android:textColor="#4F4F5C"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textnama"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        android:hint="MASUKKAN NAMA"
        android:textColorHint="#EF3D66"
        android:theme="@style/EditScreenTextInputLayoutStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNama"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textjurusan"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:hint="MASUKKAN JURUSAN"
        android:textColorHint="#EF3D66"
        android:theme="@style/EditScreenTextInputLayoutStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextJurusan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textemail"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:hint="MASUKKAN EMAIL"
        android:textColorHint="#EF3D66"
        android:theme="@style/EditScreenTextInputLayoutStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"/>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:layout_below="@id/buttonAdd"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custombutton"
        android:textColor="#FFFFFF"
        android:text="Tambah Mahasiswa"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:id="@+id/buttonAdd" />

    <Button
        android:layout_below="@id/buttonView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custombutton"
        android:textColor="#FFFFFF"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="Daftar Mahasiswa"
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/buttonView" />
    <TextView
        android:layout_alignParentBottom="true"
        android:text="Â© Decya Holygina / 201810370311105"
        android:fontFamily="sans-serif-condensed-light"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />



</LinearLayout>